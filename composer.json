{
    "name": "turker/devops",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Turker\\Devops\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Turker\\Devops\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "TÃ¼rker YILDIRIM",
            "email": "me@turkeryildirim.com"
        }
    ],
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^3.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "extra": {
        "hooks": {
             "config": {
                "stop-on-failure": ["pre-push"]
            },
            "pre-commit": [
                "vendor/bin/phpcb"
            ],
            "pre-push": [
                "vendor/bin/phpcbf",
                "vendor/bin/phpunit",
                "vendor/bin/phpstan"
            ]
         }
     }
    
}
